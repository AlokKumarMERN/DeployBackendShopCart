# Example .env for Backend (PRODUCTION - VERCEL)
# Add these in Vercel Dashboard: Project Settings > Environment Variables

# MongoDB (use your MongoDB Atlas connection string)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shopdb?retryWrites=true&w=majority

# JWT Secret (same as development or generate new for production)
JWT_SECRET=production-super-secret-jwt-key-different-from-dev

# Google OAuth (Get from Google Cloud Console - Production credentials)
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_CALLBACK_URL=https://your-backend-domain.vercel.app/api/auth/google/callback

# Session Secret (generate new for production)
SESSION_SECRET=production-super-secret-session-key-different-from-dev

# Frontend URL (your Vercel frontend URL)
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Environment
NODE_ENV=production
